<h2>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
  <%= link_to 'マイページ', posts_path, class: 'header-menu'%>
</h2>
<ul>
  <% @users.each do |user| %>
    <h3>
    <%= user.name %> さんの投稿
    </h3>
    <% @posts.each do |post| %>
      <% if user.id == post.user_id %>  <%# user.nameが投稿したpostを判別してリスト化する %>
        <li>
          <%= link_to post.title, post_path(post.id)%>
        </li>
      <% end %>
    <% end %>
  <% end %>

